<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div style="width:auto; height:60px; background-color:whitesmoke;">
        <div style="width:600px; float:left; padding-left:5px;">
            <h2>Customer Relations Management</h2>
        </div>
        <br/><br/>
        <div style="width:auto; float:right;">
        @if (Request.IsAuthenticated)
        {
            <strong>Hello @Html.Encode(User.Identity.Name)</strong>
            <span> | </span>
            @Html.ActionLink("Log Out", "Logout", "User")
        }
        else
        {
            @Html.ActionLink("Register", "Register", "User")
            <span> | </span>
            @Html.ActionLink("Log In", "Login", "User")
        }
            </div>
    </div>
    <br/>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
